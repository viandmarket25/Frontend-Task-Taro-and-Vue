.login-wrapper {
  background-color: rgba(230, 0, 38, 0.9);
  height: 100vh;
  font-size: 28rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}
.login-wrapper .login-tel,
.login-wrapper .login-captcha {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  background-color: transparent;
  padding: 20rpx;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.login-wrapper .login-tel .h5-label,
.login-wrapper .login-captcha .h5-label {
  padding-right: 20rpx;
  color: whitesmoke;
  width: 100rpx;
  display: block;
  text-align: right;
}
.login-wrapper .login-tel .input-wrap,
.login-wrapper .login-tel .input-wrap-ext,
.login-wrapper .login-captcha .input-wrap,
.login-wrapper .login-captcha .input-wrap-ext {
  width: 360rpx;
}
.login-wrapper .login-tel .input-wrap-ext,
.login-wrapper .login-captcha .input-wrap-ext {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.login-wrapper .login-tel .input-wrap-ext .input,
.login-wrapper .login-captcha .input-wrap-ext .input {
  width: 220rpx;
}
.login-wrapper .login-tel .input,
.login-wrapper .login-captcha .input {
  background-color: rgba(255, 255, 255, 0.99);
  padding: 8rpx;
  border-radius: 8rpx;
}
.login-wrapper .login-captcha-btn {
  margin-left: 20rpx;
  background-color: rgba(255, 255, 255, 0.5);
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}
.login-wrapper .login-btn {
  width: 460rpx;
  color: #000;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 8rpx 18rpx;
  text-align: center;
  margin-top: 80rpx;
}
